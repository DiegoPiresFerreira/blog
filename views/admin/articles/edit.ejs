<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navBar.ejs')%>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edição de artigo</h2>
        </div>
        <div class="card-body">
            <hr>
            <form method="post" action="/articles/update">
                <input type="hidden" value="<%=article.id %>" name="id">
                <input class="form-control" type="text" name="title" value="<%=article.title%>"><br>
                <textarea class="form-control" placeholder="Escreva seu artigo"  name="body" id="article"><%=article.body%></textarea><br>
                <label for="">Categoria</label>
                <select class="form-control" name="category">
                    <%categories.forEach(category => {%>
                        <option value="<%=category.id%>"><%= category.title %></option>
                    <%})%>
                </select><br>
                <button class="btn btn-success" type="submit">Cadastrar</button>
            </form>
        </div>
        
    </div>
</div>

<%-include('../../partials/footer.ejs')%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector:'#article',
        plugins:[
            'advlist autolink link image lists preview hr searchreplace wordcount fullscreen insertdatetime media save table paste'
        ]
    })
</script>