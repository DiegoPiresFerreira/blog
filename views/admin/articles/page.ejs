<%-include('../../partials/header.ejs')%>
<%-include('../../partials/homeNavBar.ejs')%>
<body>
    <div class="container">
        <%result.articles.rows.forEach(article =>{%>
            <div class="card-header">
                <h2><%=article.title%></h2>
            </div>
            <div class="card-body">
                <a class="btn btn-success"href="/<%=article.slug%>">Ler artigo</a>
            </div>

        <%})%>


        <div class="row" style="float:left">
            <%if(result.page > 2){%>
                <a href="/articles/page/<%=result.page-1%>"><<< Prev</a>    
            <%} else if (result.page == 2){%>
                <a href="/"><<< Prev</a>   
            <%}%>
            
        </div>
        <div class="row" style="float:right">
                <%if(result.next){%>
                     <a href="/articles/page/<%=result.page+1%>">Next >>></a>
                <%}%>
        </div>
    </div>

</body>
<%-include('../../partials/footer.ejs')%>